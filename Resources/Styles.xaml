<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:utils="clr-namespace:GoldPriceMonitor.Utils">

    <!-- 颜色定义 -->
    <SolidColorBrush x:Key="AccentColor" Color="#FFD700" />
    <SolidColorBrush x:Key="CnyGoldColor" Color="#FF6B35" />
    <SolidColorBrush x:Key="PositiveColor" Color="#4CAF50" />
    <SolidColorBrush x:Key="NegativeColor" Color="#F44336" />

    <SolidColorBrush x:Key="WindowBackground" Color="#1E1E2E" />
    <SolidColorBrush x:Key="HeaderBackground" Color="#2D2D3D" />
    <SolidColorBrush x:Key="FooterBackground" Color="#2D2D3D" />
    <SolidColorBrush x:Key="CardBackground" Color="#252535" />
    <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF" />
    <SolidColorBrush x:Key="TextSecondary" Color="#B0B0B0" />
    <SolidColorBrush x:Key="TextTertiary" Color="#707070" />
    <SolidColorBrush x:Key="SecondaryColor" Color="#4A4A5A" />

    <!-- 阴影效果 -->
    <DropShadowEffect x:Key="DropShadow" Color="#000000" BlurRadius="15" Direction="270" ShadowDepth="3" Opacity="0.5" />

    <!-- 布尔转颜色转换器 -->
    <utils:BooleanToBrushConverter x:Key="BoolToColorConverter" TrueBrush="{StaticResource PositiveColor}" FalseBrush="{StaticResource NegativeColor}" />
    <utils:EnumToBoolConverter x:Key="EnumToBoolConverter" />

    <!-- 按钮样式 -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource AccentColor}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Opacity" Value="0.9" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- 单选按钮样式 -->
    <Style x:Key="RadioButtonStyle" TargetType="RadioButton">
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <StackPanel Orientation="Horizontal">
                        <Grid Width="16" Height="16" Margin="0,0,5,0">
                            <Ellipse Stroke="{StaticResource TextSecondary}" Fill="Transparent" StrokeThickness="1" />
                            <Ellipse x:Name="CheckMark" Fill="{StaticResource AccentColor}" Width="8" Height="8"
                                     HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed" />
                        </Grid>
                        <ContentPresenter />
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="CheckMark" Property="Visibility" Value="Visible" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 文本框样式 -->
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource CardBackground}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="CaretBrush" Value="{StaticResource AccentColor}" />
    </Style>

</ResourceDictionary>
